<com.desperado.customerlib.view.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:animateLayoutChanges="true"
                                                     android:background="@color/white">

    <com.desperado.customerlib.view.autolayout.AutoRelativeLayout
        android:id="@+id/rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_toolbar_height">
        <!--左边视图-->
        <com.desperado.customerlib.view.autolayout.AutoLinearLayout
            android:id="@+id/ll_title_bar_left_click"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="30px"
            android:gravity="center">

            <ImageView
                android:scaleType="fitCenter"
                android:id="@+id/iv_title_bar_left_icon"
                android:layout_width="22px"
                android:layout_height="34px"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/tv_title_bar_left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:textColor="@color/text_dark_gary"
                android:textSize="14sp" />
        </com.desperado.customerlib.view.autolayout.AutoLinearLayout>

        <!--右边视图-->
        <com.desperado.customerlib.view.autolayout.AutoLinearLayout
            android:id="@+id/ll_title_bar_right_click"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="20px"
            android:layout_marginRight="8px">

            <ImageView
                android:id="@+id/iv_title_bar_right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_title_bar_right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:textColor="@color/text_dark_gary" />
        </com.desperado.customerlib.view.autolayout.AutoLinearLayout>

        <!--中间标题-->
        <com.desperado.customerlib.view.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_title_bar_center_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/supplier_icon"
                android:visibility="gone" />

            <TextView
                android:gravity="center"
                android:id="@+id/tv_title_bar_center_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/text_dark_gary"
                android:textSize="18sp" />

        </com.desperado.customerlib.view.autolayout.AutoLinearLayout>

    </com.desperado.customerlib.view.autolayout.AutoRelativeLayout>
</com.desperado.customerlib.view.autolayout.AutoRelativeLayout>
